@inject IMatDialogService MatDialogService
@inject HttpClient Http

<MatDialogContent>
    <MatTextField Label="Namn" @bind-Value="Category.Name" FullWidth="true"/>
</MatDialogContent>
<MatDialogActions>
    <MatButton OnClick="@(_ => CloseDialog())">Avbryt</MatButton>
    <MatButton OnClick="@(_ => AddItem())">Lägg till</MatButton>
</MatDialogActions>

@code
{
    [Parameter]
    public Category Category { get; set; } = new Category();

    [CascadingParameter]
    public MatDialogReference DialogReference { get; set; }

    void CloseDialog()
    {
        DialogReference.Close(null);
    }

    void AddItem()
    {
        DialogReference.Close(Category);
    }
}